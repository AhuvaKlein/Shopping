@using ecommerceProducts.Models
@using ecommerceProducts.data
@model IndexViewModel

<head>
    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/shop-homepage.css" rel="stylesheet">
</head>

<body>

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Categories</p>
                <div class="list-group">
                    @foreach (Category c in Model.Categories)
                    {
                        <a href="/home/index?id=@c.Id" class="list-group-item">@c.Name</a>
                    }

                </div>
            </div>

            <div class="row">
                @foreach (Product p in Model.Products)
                {
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <img src="~/ProductImages/@p.Image" alt="">
                            <div class="caption">
                                <h4 class="pull-right">@p.Price.ToString("C")</h4>
                                <h4>
                                    <a href="/home/viewProduct?id=@p.Id">@p.Name</a>
                                </h4>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>

    </div>
    <!-- /.container -->
    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

